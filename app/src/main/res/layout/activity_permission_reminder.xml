<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:scrollbars="none">

    <LinearLayout
            android:layout_width="match_parent"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="@color/black">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/usage_permission_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usage Access Permission"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"/>

                <TextView
                        android:id="@+id/usage_permission_explanation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This permission allows the app to monitor which apps are being used. It is needed for detecting and blocking specific apps according to user settings."
                        android:textSize="14sp"
                        android:paddingBottom="16dp"/>

                <Button
                        android:id="@+id/usage_permission_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grant Usage Permission"
                        android:background="@drawable/button_background"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="@color/black">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/overlay_permission_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overlay Permission"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"/>

                <TextView
                        android:id="@+id/overlay_permission_explanation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This permission allows the app to display information or warnings over other apps. It is needed for blocking access to specific apps by showing a blocking screen."
                        android:textSize="14sp"
                        android:paddingBottom="16dp"/>

                <Button
                        android:id="@+id/overlay_permission_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grant Overlay Permission"
                        android:background="@drawable/button_background"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="@color/black">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/battery_permission_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ignore Battery Optimizations"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"/>

                <TextView
                        android:id="@+id/battery_permission_explanation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This permission allows the app to run continuously without being stopped by battery optimization settings. This makes sure the app can monitor and block apps at all times."
                        android:textSize="14sp"
                        android:paddingBottom="16dp"/>

                <Button
                        android:id="@+id/battery_permission_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Disable Battery Optimization"
                        android:background="@drawable/button_background"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="@color/black">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/notification_permission_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification Listener Permission"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"/>

                <TextView
                        android:id="@+id/notification_permission_explanation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This permission allows the app to listen to and interact with your notifications. It is necessary for blocking notifications from distracting apps."
                        android:textSize="14sp"
                        android:paddingBottom="16dp"/>

                <Button
                        android:id="@+id/notification_permission_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grant Notification Permission"
                        android:background="@drawable/button_background"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                card_view:cardElevation="4dp"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="@color/black">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:id="@+id/accessibility_permission_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accessibility Permission"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"/>

                <TextView
                        android:id="@+id/accessibility_permission_explanation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="This permission allows the app to monitor and block websites you mark as distracting in your blockers."
                        android:textSize="14sp"
                        android:paddingBottom="16dp"/>

                <Button
                        android:id="@+id/accessibility_permission_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grant Accessibility Permission"
                        android:background="@drawable/button_background"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
