<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="gmail.developer_formal.freeappblocker.fragments.SupportFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp" />

            <Button
                    android:id="@+id/play_short_ad_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/extra_short_add_button_text"
                    android:background="@drawable/button_background"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/white" />

            <Button
                    android:id="@+id/play_long_ad_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/extra_long_add_button_text"
                    android:background="@drawable/button_background"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/white" />

            <Button
                    android:id="@+id/donate_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/extra_paypal_button_text"
                    android:background="@drawable/button_background"
                    android:layout_margin="8dp"
                    android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>
