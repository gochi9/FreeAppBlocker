<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="gmail.developer_formal.freeappblocker.fragments.StrictFragment">

    <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/waveAnimationView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:lottie_rawRes="@raw/wave_animation_enable"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/displayTimer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginBottom="@dimen/margin_medium"/>

    <gmail.developer_formal.freeappblocker.objects.AutoResizeTextView
            android:id="@+id/displayTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/default_timer_message"
            android:gravity="center"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toTopOf="@id/pickerButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/margin_large"/>

    <Button
            android:id="@+id/pickerButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:text="@string/set_timer_button_text"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_medium"
            android:background="@drawable/button_transparent_outline"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintBottom_toTopOf="@id/actionButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/margin_medium"/>

    <Button
            android:id="@+id/actionButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:text="@string/activate_button_text"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_size_medium"
            android:background="@drawable/rounded_button"
            android:textStyle="bold"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="@dimen/margin_small"/>
</androidx.constraintlayout.widget.ConstraintLayout>
